@using Trizen.Data.Base.ViewModel
@using Trizen.Data.Tour.ViewModel
@using Trizen.Infrastructure.Enumerations

@model SearchTourViewModel

@{
    string backgroundClass = string.Empty;
    if (Model.CallerPage == CallerPage.Home)
    {
        backgroundClass = "hero-bg-3";
    }
    else if (Model.CallerPage == CallerPage.Search)
    {
        backgroundClass = "bread-bg-2";
    }
}

<!-- ================================
    START HERO-WRAPPER AREA
================================= -->
<section class="hero-wrapper hero-wrapper3">
    <div class="hero-box pb-0 @backgroundClass ripple-bg bg-fixed">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="hero-content pb-5 hero-content-3 text-center">
                        <div class="section-heading">
                            @if (Model.CallerPage == CallerPage.Home)
                            {
                                <h2 class="sec__title">برای دیدن عجایب دنیا <br> آماده ای ؟!</h2>
                                <p class="sec__desc pt-1">شگفت انگیز ترین سفر زندگیت رو تجربه کن !</p>
                            }
                            else if (Model.CallerPage == CallerPage.Search)
                            {
                                <h2 class="sec__title text-white">نتیجه جستجو</h2>
                            }
                        </div>
                    </div><!-- end hero-content -->
                    <div class="search-fields-container search-fields-container-shape">
                        <div class="search-fields-container-inner">
                            <form method="get" class="contact-form-action" asp-controller="Tours" asp-action="Index">
                                <div class="row">
                                    <div class="col-lg-4 pr-0">
                                        <div class="input-box">
                                            <label class="label-text" asp-for="Title"></label>
                                            <div class="form-group">
                                                <span class="la la-i-cursor form-icon"></span>
                                                <input class="form-control" asp-for="Title" placeholder="اسمش چیه؟">
                                            </div>
                                        </div>
                                    </div><!-- end col-lg-4 -->
                                    <div class="col-lg-4 pr-0">
                                        <div class="input-box">
                                            <label class="label-text" asp-for="DestinationId"></label>
                                            <div class="form-group">
                                                <span class="la la-map-marker form-icon"></span>
                                                <select class="form-control" asp-for="DestinationId">
                                                    <option value="">
                                                        @Resource.PleaseSelect
                                                    </option>
                                                    @foreach (ListViewModel item in ViewBag.Destinations.Data)
                                                    {
                                                        <option value="@item.Id">
                                                            @item.Title
                                                        </option>
                                                    }
                                                </select>
                                            </div>
                                        </div>
                                    </div><!-- end col-lg-4 -->
                                    <div class="col-lg-4">
                                        <div class="input-box">
                                            <label class="label-text" asp-for="TourTypeId"></label>
                                            <div class="form-group">
                                                <span class="la la-list form-icon"></span>
                                                <select class="form-control" asp-for="TourTypeId">
                                                    <option value="">
                                                        @Resource.PleaseSelect
                                                    </option>
                                                    @foreach (ListViewModel item in ViewBag.TourTypes.Data)
                                                    {
                                                        <option value="@item.Id">
                                                            @item.Title
                                                        </option>
                                                    }
                                                </select>
                                            </div>
                                        </div>
                                    </div><!-- end col-lg-4 -->
                                    <div class="col-lg-4 pr-0">
                                        <div class="input-box">
                                            <label class="label-text" asp-for="DestinationTypeId"></label>
                                            <div class="form-group">
                                                <span class="la la-list form-icon"></span>
                                                <select class="form-control" asp-for="DestinationTypeId">
                                                    <option value="">
                                                        @Resource.PleaseSelect
                                                    </option>
                                                    @foreach (ListViewModel item in ViewBag.DestinationTypes.Data)
                                                    {
                                                        <option value="@item.Id">
                                                            @item.Title
                                                        </option>
                                                    }
                                                </select>
                                            </div>
                                        </div>
                                    </div><!-- end col-lg-4 -->
                                    <div class="col-lg-4 pr-0">
                                        <div class="input-box">
                                            <label class="label-text" asp-for="GoDate"></label>
                                            <div class="form-group">
                                                <span class="la la-calendar form-icon"></span>
                                                <input class="date-range form-control" type="text" data-jdp asp-for="GoDate">
                                            </div>
                                        </div>
                                    </div><!-- end col-lg-4 -->
                                    <div class="col-lg-4">
                                        <div class="input-box">
                                            <label class="label-text" asp-for="BackDate"></label>
                                            <div class="form-group">
                                                <span class="la la-calendar form-icon"></span>
                                                <input class="date-range form-control" type="text" data-jdp asp-for="BackDate">
                                            </div>
                                        </div>
                                    </div><!-- end col-lg-4 -->
                                </div>
                                <div class="btn-box pt-3">
                                    <button type="submit" class="theme-btn">حالا بگرد</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div><!-- end col-lg-12 -->
            </div><!-- end row -->
        </div><!-- end container -->
        <svg class="hero-svg" viewBox="0 0 500 150" preserveAspectRatio="none"><path d="M0.00,49.98 C149.99,150.00 349.20,-49.98 500.00,49.98 L500.00,150.00 L0.00,150.00 Z"></path></svg>
    </div>
</section><!-- end hero-wrapper -->
<!-- ================================
    END HERO-WRAPPER AREA
================================= -->
