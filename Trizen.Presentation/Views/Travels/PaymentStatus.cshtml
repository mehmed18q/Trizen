@using Trizen.Data.Base.ViewModel
@using Trizen.Data.Tour.ViewModel
@using Trizen.Data.Travel.ViewModel
@{
    ViewData["Title"] = Resource.Payment;
    bool isPay = ViewBag.Type == "Pay";
}
<!-- ================================
    START PAYMENT AREA
================================= -->
<section class="payment-area section-bg section-padding">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="form-box payment-received-wrap mb-0">
                    <div class="form-title-wrap">
                        <div class="step-bar-wrap text-center">
                            <ul class="step-bar-list d-flex align-items-center justify-content-around">
                                <li class="step-bar flex-grow-1 step-bar-active">
                                    <span class="icon-element">1</span>
                                    <p class="pt-2 color-text-2">انتخاب اتاق</p>
                                </li>
                                <li class="step-bar flex-grow-1 step-bar-active">
                                    <span class="icon-element">2</span>
                                    <p class="pt-2 color-text-2">جزئیات رزرو و پرداخت </p>
                                </li>
                                <li class="step-bar flex-grow-1 @(isPay ? "step-bar-active" : "")">
                                    <span class="icon-element">3</span>
                                    <p class="pt-2 color-text-2">تکمیل رزرو !</p>
                                </li>
                            </ul>
                        </div>
                    </div>
                    <div class="form-content">
                        <div class="payment-received-list">
                            <div class="d-flex align-items-center">
                                @if (isPay)
                                {
                                    <i class="la la-check icon-element flex-shrink-0 mr-3 ml-0"></i>
                                }
                                else
                                {
                                    <i style="background-color:red" class="la la-exclamation icon-element flex-shrink-0 mr-3 ml-0"></i>
                                }
                                <div>
                                    <h3 class="title pb-1">@(isPay ? "متشکرم" : "") @User.GetFullName() ! </h3>
                                    <h3 class="title">رزرو شما در تور @ViewBag.Tour.Tour.Title @(isPay ? "تایید" : "لغو") شد .</h3>
                                </div>
                            </div>
                            <ul class="list-items py-4">
                                <li><i class="la la-check text-success mr-2"></i><strong class="text-black">   </strong>در تاریخ <strong class="text-black">  @(((DateTime)ViewBag.Tour.Tour.StartTime).ToShamsiWithTime())</strong> منتظر شماهستیم </li>
                            </ul>
                        </div><!-- end card-item -->
                        <div class="btn-box pb-4">
                            <a href="/" class="theme-btn mb-2 mr-2">بازگشت به خانه</a>
                        </div>
                    </div>
                </div><!-- end payment-card -->
            </div><!-- end col-lg-12 -->
        </div><!-- end row -->
    </div><!-- end container -->
</section>
<!-- ================================
    END PAYMENT AREA
================================= -->
