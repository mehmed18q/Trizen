@using Trizen.Data.User.ViewModel
@using Trizen.Infrastructure.Utilities
@model List<BaseEntityViewModel>
@{
    ViewData["Title"] = Resource.List;
}

<div class="block-header">
    <div class="row">
        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
            <ul class="breadcrumb breadcrumb-style ">
                <li class="breadcrumb-item bcrumb-1">
                    <a asp-controller="Home" asp-action="Index">
                        <i class="fas fa-home"></i> @Resource.Home
                    </a>
                </li>
                <li class="breadcrumb-item bcrumb-2">
                    <a href="#" onclick="return false;">@ViewBag.Entity</a>
                </li>
                <li class="breadcrumb-item active">@Resource.List</li>
            </ul>
        </div>
    </div>
</div>

<div class="row clearfix">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="card">
            <div class="header">
                <h2>
                    <strong>@Resource.List</strong> @ViewBag.Entity
                </h2>
                <a href="/User/BaseEntity/Create?Entity=@ViewBag.Entity">@Resource.Create</a>
            </div>
            <div class="body">
                <div class="row clearfix">
                    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                        <div class="card">
                            <div class="body table-responsive">
                                <table class="table table-hover">
                                    <thead>
                                        <tr>
                                            <th>#</th>
                                            <th>@Resource.Title</th>
                                            <th>@Resource.Commands</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @{
                                            int counter = 0;
                                        }
                                        @foreach (var item in Model)
                                        {
                                            <tr>
                                                <th scope="row">@(++counter)</th>
                                                <td>@item.Title</td>
                                                <td>
                                                    <a href="/User/BaseEntity/Edit/@item.Id?Entity=@ViewBag.Entity">@Resource.Edit</a>
                                                    <a href="/User/BaseEntity/Delete/@item.Id?Entity=@ViewBag.Entity">@Resource.Delete</a>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>